{
  "extends": [
    "@tsconfig/node-lts/tsconfig.json",
    "@tsconfig/strictest/tsconfig.json"
  ],
  "compilerOptions": {
    /* Path */
    "outDir": "dist",
    "baseUrl": "src/",
    "paths": {
      "@/db/*": ["db/*"],
      "@/models/*": ["models/*"],
      "@/utils/*": ["utils/*"],
      "@/types/*": ["types/*"]
    },

    /* Linting */
    "noPropertyAccessFromIndexSignature": false
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
