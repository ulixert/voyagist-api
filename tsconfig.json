{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "verbatimModuleSyntax": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "noEmit": true,
    "lib": ["es2022"],
    /* Paths */
    "outDir": "dist",
    "baseUrl": "src/",
    "paths": {
      "@/constants/*": ["constants/*"],
      "@/controllers/*": ["controllers/*"],
      "@/db/*": ["db/*"],
      "@/errors/*": ["errors/*"],
      "@/models/*": ["models/*"],
      "@/middlewares/*": ["middlewares/*"],
      "@/routes/*": ["routes/*"],
      "@/types/*": ["types/*"],
      "@/utils/*": ["utils/*"],
      "@/validates/*": ["validates/*"]
    }
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
